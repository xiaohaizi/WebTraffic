
@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tpl-content-wrapper">
    <div class="tpl-content-page-title">
        修改密码
    </div>
    <ol class="am-breadcrumb">
        <li><a href="#" class="am-icon-home">首页</a></li>

        <li class="am-active">修改密码</li>
    </ol>
    <div class="tpl-portlet-components">
        <div class="portlet-title">
            <div class="caption font-green bold">
                <span class="am-icon-code"></span> 修改密码
            </div>

        </div>
        <div class="row">
            <div class="am-g tpl-amazeui-form">

                <div class="am-u-sm-12 am-u-md-9">
                    <form class="am-form am-form-horizontal" id="UpdateUserPwd" action="/home/UpdatePwdAction" method="post" data-am-validator>

                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">旧密码</label>
                            <div class="am-u-sm-9">
                                <input id="oldpwd" name="oldpwd" placeholder="旧密码 " type="password" required>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">新密码</label>
                            <div class="am-u-sm-9">
                                <input id="newpwd" name="newpwd" placeholder="新密码 " type="password" required>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">确认新密码</label>
                            <div class="am-u-sm-9">
                                <input id="newpwd1" name="newpwd1" placeholder="确认新密码 " type="password" required>
                            </div>
                        </div>
                        <div class="am-form-group">
                            <div class="am-u-sm-9 am-u-sm-push-3">
                                <button type="submit" class="am-btn am-btn-primary tpl-btn-bg-color-success">确认修改</button>
                               
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {

        $('#UpdateUserPwd').validator({
            submit: function () {
                var formValidity = this.isFormValid();
               
                if (formValidity) {
                    var $loading = AMUI.dialog.loading({
                        title: '正在处理...'
                    });
                    $('#UpdateUserPwd').ajaxSubmit(function (msg) {

                        $loading.modal('close');
                        if (msg.status == 200) {
                            redirectUrl("/home/updatepwd");
                        }
                        AMUI.dialog.alert({
                            title: '提示',
                            content: msg.msg
                        });
                    });

                }
                return false;
            }
        });
    });
</script>
