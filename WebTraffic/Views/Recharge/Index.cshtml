@using WebTraffic.Models;
@{
    ViewBag.Title = "充值记录";
    Layout = "~/Views/Shared/_Layout.cshtml";
    PageModel pageItem = (PageModel)ViewBag.PageData;
    List<Recharge> listItem = (List<Recharge>)ViewBag.ListItem;
}

<div class="tpl-content-wrapper">
    <div class="tpl-content-page-title">
        阅读量
    </div>
    <ol class="am-breadcrumb">
        <li><a href="/" class="am-icon-home">首页</a></li>

        <li class="am-active">充值记录</li>
    </ol>

    <div class="tpl-portlet-components">

        <div class="row">

            <div class="am-u-sm-12">
                <div class="portlet-title">
                    <div class="caption font-green bold">
                        <span class="am-icon-code"></span> 充值记录
                    </div>
                </div>
                <div class="am-g">
                    <div class="am-u-sm-12 am-u-md-6">
                        <div class="am-btn-toolbar">
                            
                        </div>
                    </div>

                </div>
                <table class="am-table am-table-striped am-table-hover table-main">
                    <thead>
                        <tr>
                            <th >ID</th>
                            <th >账号</th>
                            <th>金额</th>
                            <th>备注</th>
                            <th>支付宝单号</th>
                            <th>添加时间</th>
                           

                        </tr>
                    </thead>
                    <tbody>
                        @if (pageItem != null)
                        {
                            foreach (var item in listItem)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Moneys </td>
                                    <td>@item.Remarks </td>
                                    <td>@item.OtherOrderNum </td>
                                    <td>@item.CreateTime </td>
                                   

                                </tr>
                            }
                        }




                    </tbody>
                </table>
                <div class="am-cf">
                    @Html.Partial("PageView")
                </div>


            </div>
        </div>
    </div>


</div>
