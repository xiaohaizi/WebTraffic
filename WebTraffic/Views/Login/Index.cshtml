
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户登录</title>
    @Styles.Render("~/Content/css")

    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
    <style type="text/css">
        .tpl-login {
            width: 100%;
        }

        .tpl-login-content {
            width: 450px;
            margin:auto;
        }

        .tpl-login-logo {
            background: url(/content/img/logo.png) center no-repeat;
            background-size:100%;
        }

        .tpl-login-logo {
            max-width: 400px;
            height: 205px;
            margin: 0 auto;
            margin-bottom: 20px;
        }

        .tpl-form-line-form, .tpl-form-border-form {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="tpl-page-container tpl-page-header-fixed">
        <div class="tpl-login">
            <div class="tpl-login-content">
                <div class="tpl-login-logo">

                </div>



                <form class="am-form am-form-horizontal  tpl-form-line-form" method="post" action="/login/userlogin" id="userLoginForm" data-am-validator>
                    <div class="am-form-group">
                        <input type="text" class="tpl-form-input" id="username" name="username" placeholder="请输入账号" required>

                    </div>

                    <div class="am-form-group">
                        <input type="password" class="tpl-form-input" id="userpwd" name="userpwd" placeholder="请输入密码" required>

                    </div>
                   
                    <div class="am-form-group">

                        <button type="submit" class="am-btn am-btn-primary  am-btn-block tpl-btn-bg-color-success  tpl-login-btn">提交</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {

            $('#userLoginForm').validator({
                submit: function () {
                    var formValidity = this.isFormValid();
                    if (formValidity) {
                        var $loading = AMUI.dialog.loading({
                            title: '正在处理...'
                        });
                        $('#userLoginForm').ajaxSubmit(function (msg) {
                            $loading.modal('close');
                            if (msg.status == 200) {
                                redirectUrl("/home");
                            }
                            AMUI.dialog.alert({
                                title: '提示',
                                content: msg.msg
                            });
                        });
                    }
                    return false;
                }
            });
        });

    </script>
    <script src="~/Content/js/amazeui.min.js"></script>
    <script src="~/Content/js/echarts.min.js"></script>
    <script src="~/Content/js/iscroll.js"></script>
    <script src="~/Content/js/app.js"></script>
    <script src="~/Content/Scripts/amazeui.dialog.min.js"></script>


    @Scripts.Render("~/bundles/scripts")
  
</body>
</html>
